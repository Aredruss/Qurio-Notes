<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aredruss.qurio.view.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/home_to_note"
            app:destination="@id/noteFragment" />
        <action
            android:id="@+id/home_to_about"
            app:destination="@id/about_fragment" />
    </fragment>

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.aredruss.qurio.view.notes.NoteFragment"
        android:label="NoteFragment"
        tools:layout="@layout/fragment_note">
        <argument
            android:name="note"
            app:argType="com.aredruss.qurio.model.Note"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/about_fragment"
        android:name="com.aredruss.qurio.view.about.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about" />
</navigation>