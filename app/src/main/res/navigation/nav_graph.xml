<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aredruss.qurio.view.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/home_to_note"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.aredruss.qurio.view.note.NoteFragment"
        android:label="NoteFragment">
        <argument android:name="note" app:nullable="true" app:argType="com.aredruss.qurio.models.Note"/>
    </fragment>
</navigation>